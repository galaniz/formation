{
  "name": "@alanizcreative/formation",
  "version": "5.1.0-beta.8",
  "description": "A collection of front end patterns and utilities",
  "main": "./lib/config/config.js",
  "type": "module",
  "files": [
    "./lib"
  ],
  "scripts": {
    "build": "npx tsc && node build/copyScss.js",
    "lint": "npx ts-standard && npx stylelint 'src/**/*.scss'",
    "release": "release-it --preRelease=beta",
    "test": "vitest --run --reporter verbose --environment happy-dom --coverage",
    "jsdoc": "jsdoc -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/formation.git"
  },
  "author": "Graciela Alaniz (https://alanizcreative.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/galaniz/formation/issues"
  },
  "homepage": "https://github.com/galaniz/formation#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.3.1",
    "@vitest/coverage-v8": "^2.0.2",
    "happy-dom": "^14.12.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "release-it": "^17.5.0",
    "sass": "^1.77.8",
    "stylelint": "^16.7.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.2"
  },
  "release-it": {
    "git": {
      "requireCommits": true,
      "commitMessage": "chore: release ${version} [ci skip]"
    },
    "github": {
      "release": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "> 0.5%"
  ]
}
