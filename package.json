{
  "name": "@alanizcreative/formation",
  "version": "4.1.2",
  "description": "A collection of front end components and utilities",
  "main": "./lib/config/config.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc && node build/copyScss.js",
    "lint": "npx ts-standard && npx stylelint 'src/**/*.scss'",
    "release": "release-it major --preRelease=beta",
    "test": "vitest --run --reporter verbose --environment jsdom",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "jsdoc": "jsdoc -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/formation.git"
  },
  "author": "Graciela Alaniz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/galaniz/formation/issues"
  },
  "homepage": "https://github.com/galaniz/formation#readme",
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-storysource": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/html": "^7.6.17",
    "@storybook/html-vite": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^9.3.4",
    "@types/jsdom": "^21.1.6",
    "jsdom": "^24.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^17.1.1",
    "sass": "^1.71.1",
    "storybook": "^7.6.17",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "release-it": {
    "git": {
      "requireCommits": true,
      "commitMessage": "Release ${version} [ci skip]"
    },
    "github": {
      "release": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "edge 16"
  ]
}
