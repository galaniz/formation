  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/formation.git"
  },
  "author": "Graciela Alaniz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/galaniz/formation/issues"
  },
  "homepage": "https://github.com/galaniz/formation#readme",
  "devDependencies": {
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-interactions": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/addon-storysource": "^7.4.6",
    "@storybook/blocks": "^7.4.6",
    "@storybook/html": "^7.4.6",
    "@storybook/html-vite": "^7.4.6",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^9.3.3",
    "jsdom": "^22.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^16.2.1",
    "sass": "^1.68.0",
    "storybook": "^7.4.6",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
