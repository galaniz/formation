{
  "name": "@alanizcreative/formation",
  "version": "5.1.0-beta.8",
  "description": "A collection of front end patterns and utilities",
  "main": "./lib/config/config.js",
  "type": "module",
  "files": [
    "./lib"
  ],
  "scripts": {
    "build": "npx tsc && node scripts/lib.js",
    "build:spec": "npx tsc --project tsconfig.spec.json && node scripts/spec.js",
    "lint:scss": "npx stylelint 'src/**/*.scss'",
    "lint:ts": "npx ts-standard 'src/**/*.ts",
    "lint": "npm run lint:ts && npm run lint:scss",
    "release": "release-it --preRelease=beta",
    "test:unit": "vitest --run --reporter verbose --environment happy-dom --coverage",
    "test:comp": "npm run build:spec && npx playwright test && node scripts/report.js",
    "test": "npm run test:unit && npm run test:comp",
    "serve": "npx serve --cors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/formation.git"
  },
  "author": "Graciela Alaniz (https://alanizcreative.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/galaniz/formation/issues"
  },
  "homepage": "https://github.com/galaniz/formation#readme",
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/dom": "^10.4.0",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/istanbul-reports": "^3.0.4",
    "@types/node": "^22.9.0",
    "glob": "^11.0.0",
    "happy-dom": "^15.11.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "release-it": "^17.10.0",
    "sass": "^1.80.6",
    "serve": "^14.2.4",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.6.3",
    "v8-to-istanbul": "^9.3.0",
    "vitest": "^2.1.4"
  },
  "release-it": {
    "git": {
      "requireCommits": true,
      "commitMessage": "chore: release ${version} [ci skip]"
    },
    "github": {
      "release": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "> 0.5%"
  ]
}
