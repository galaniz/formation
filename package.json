{
  "name": "@alanizcreative/formation",
  "version": "0.0.1",
  "description": "Extendable TS web components and utilities, and SCSS generated utility classes",
  "main": "./lib/config/config.js",
  "packageManager": "pnpm@10.29.1",
  "type": "module",
  "files": [
    "./lib"
  ],
  "exports": {
    "./*": {
      "import": "./lib/*"
    }
  },
  "scripts": {
    "build": "npx tsc --project tsconfig.build.json && node scripts/lib.js && pnpm minify",
    "build:spec": "npx tsc --project tsconfig.spec.json && node scripts/spec.js",
    "lint:scss": "npx stylelint 'src/**/*.scss'",
    "lint:ts": "npx eslint .",
    "lint": "pnpm lint:ts && pnpm lint:scss",
    "minify": "find lib -name \"*.js\" -exec terser {} -o {} --compress \\;",
    "release": "release-it",
    "test:utils": "vitest --run --reporter verbose --environment happy-dom --coverage",
    "test:spec": "pnpm build && pnpm build:spec && npx playwright test",
    "test": "pnpm test:utils && pnpm test:spec",
    "serve": "npx serve --cors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galaniz/formation.git"
  },
  "author": "Graciela Alaniz (https://alanizcreative.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/galaniz/formation/issues"
  },
  "homepage": "https://github.com/galaniz/formation#readme",
  "devDependencies": {
    "@alanizcreative/formation-coverage": "0.0.5",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "happy-dom": "^20.5.2",
    "release-it": "^19.2.4",
    "sass": "^1.97.3",
    "serve": "^14.2.5",
    "stylelint": "^17.1.1",
    "stylelint-config-standard-scss": "^17.0.0",
    "terser": "5.46.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.54.0",
    "vitest": "^4.0.18"
  },
  "release-it": {
    "git": {
      "requireCommits": true,
      "commitMessage": "chore: release ${version} [ci skip]",
      "tag": true,
      "push": true
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "browserslist": [
    "> 0.5%"
  ]
}
